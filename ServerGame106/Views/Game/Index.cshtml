@model IEnumerable<GameLevel>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h2 class="text-center">Game Levels</h2>
			<table class="table">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(Model => Model.title)
						</th>
						<th>
							@Html.DisplayNameFor(Model => Model.Description)

						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(ModelItem => item.title)
							</td>
							<td>
								<a asp-action="Edit" asp-route-id="@item.LevelID">Edit</a>
								<a asp-action="Details" asp-route-id="@item.LevelID">Details</a>
								<a asp-action="Delete" asp-route-id="@item.LevelID">Delete</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<a asp-action="Create" class="btn btn-primary">Create New</a>
		</div>
	</div>
</div>
	
